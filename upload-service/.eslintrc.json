{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": [
            "warn",
            2400,
            {
                "comments": 1000
            }
        ],
        "linebreak-style": "off",
        "import/prefer-default-export": ["off"],
        "quotes": "off",
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "radix": "off",
        "consistent-return": "off",
        "eslint-plugin-import/no-extraneous-dependencies": "off",
        "no-underscore-dangle": "off",
        "import/no-extraneous-dependencies": "off",
        "comma-dangle": "off",
        "object-curly-newline": "off"
    }
}
